@using Newtonsoft.Json
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
   
    var userJson = Context.Session.GetString("User");
    Employee employee =JsonConvert.DeserializeObject<Employee>(userJson);
  
}





<nav class="sidebar sidebar-offcanvas" id="sidebar">
    <ul class="nav">
        <li class="nav-item nav-profile">
            <a href="@Url.Action("EmployeeProfile", "Employee", new { id = employee.Id })" class="nav-link">
            
            <div class="nav-profile-image">
                    <img src="/images/profile_pic.webp" alt="profile" />
                    <span class="login-status online"></span>
                    <!--change to offline or busy as needed-->
                </div>
               <div class="nav-profile-text d-flex flex-column">
                   
                        <span class="font-weight-bold mb-2">@employee.FirstName @employee.LastName</span>
                        <span class="menu-title">@employee.Designation</span>

                 
                </div>
                <i class="mdi mdi-bookmark-check text-success nav-profile-badge"></i>
            </a>
        </li>
        
        <li class="nav-item">
            <a asp-controller="Employee"  asp-action="ProjectList" class="nav-link"   >
                <span class="menu-title">My Projects</span>
                <i class="mdi mdi-crosshairs-gps menu-icon"></i>
            </a>
            
        </li>
        <li class="nav-item">
            <a asp-controller="Task" asp-action="ListByEmployee"  class="nav-link" >
                <span class="menu-title">My Tasks</span>
                <i class="mdi mdi-contacts menu-icon"></i>
            </a>
            
        </li>
         <li class="nav-item">
            <a class="nav-link"  href="@Url.Action("EmployeeCalendar", "Employee", new { id = employee.Id })" >
                <span class="menu-title">My Calendar</span>
                <i class="fa fa-calendar-o menu-icon"></i>
            </a>
            
        </li>
        
        
        
       
    </ul>
</nav>