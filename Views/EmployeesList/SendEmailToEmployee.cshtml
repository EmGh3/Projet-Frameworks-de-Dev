@model ERP_Project.Models.viewModels.SendEmailViewModel
@{
    Layout = "../Shared/_adminLayout.cshtml";
}

 
<link rel="stylesheet" href="~/css/SendEmail.css" />
<div class="container py-2">
    <div class="row">
        <div class="col-10">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-gradient-primary text-white py-2">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-envelope-open-text me-2"></i>
                        <h5 class="card-title mb-0 text-white">Send Email to @Model.EmployeeName</h5>
                    </div>
                </div>

                <div class="card-body p-3">
                   

                    <div class="recipient-card mb-3">
                        <div class="d-flex align-items-center">
                            <div class="recipient-avatar">
                                <img src="/images/profile_pic.webp" alt="Profile Picture"
                                     class="rounded-circle border border-2 border-primary">
                            </div>
                            <div class="recipient-info ms-3">
                                <h6 class="mb-1">@Model.EmployeeName</h6>
                                <p class="text-muted small mb-0">
                                    <i class="fas fa-envelope me-2"></i>@Model.EmployeeEmail
                                </p>
                            </div>
                        </div>
                    </div>

                    <form asp-action="SendEmailToEmployee" method="post">
                        <input type="hidden" id="EmployeeName" name="EmployeeName" value="@Model.EmployeeName" />
                        <input type="hidden" id="EmployeeEmail" name="EmployeeEmail" value="@Model.EmployeeEmail" />

                        <div class="mb-3">
                            <label class="form-label text-muted">
                                <i class="fas fa-heading me-2"></i>Subject
                            </label>
                            <input type="text" id="Subject" name="Subject"
                                   class="form-control form-control-lg border-0 bg-light"
                                   value="@Model.Subject" required
                                   placeholder="Enter email subject">
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-muted">
                                <i class="fas fa-file-alt me-2"></i>Message
                            </label>
                            <textarea id="Body" name="Body"
                                      class="form-control border-0 bg-light"
                                      rows="6" required
                                      placeholder="Write your message here...">@Model.Body</textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-muted">
                                <i class="fas fa-signature me-2"></i>Signature
                            </label>
                            <textarea id="Signature" name="Signature"
                                      class="form-control border-0 bg-light"
                                      rows="2"
                                      placeholder="Enter your signature">@Model.Signature</textarea>
                        </div>

                        <div class="text-end mt-3">
                            <button type="button" class="btn btn-light me-2">
                                <i class="fas fa-times me-2"></i>Cancel
                            </button>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-paper-plane me-2"></i>Send Email
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer bg-light text-muted py-2">
                    <small><i class="fas fa-clock me-1"></i>Last updated: @DateTime.Now.ToString("dd/MM/yyyy")</small>
                </div>
            </div>
        </div>
    </div>
</div>

