@model ERP_Project.Models.viewModels.SendEmailViewModel
@{
    Layout = "../Shared/_adminLayout.cshtml";
}

<div class="container py-2">
    <div class="row">
        <div class="col-10">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-gradient-primary text-white py-2">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-envelope-open-text me-2"></i>
                        <h5 class="card-title mb-0 text-white">Send Email to @Model.EmployeeName</h5>
                    </div>
                </div>

                <div class="card-body p-3">
                   

                    <!-- Recipient Card -->
                    <div class="recipient-card mb-3">
                        <div class="d-flex align-items-center">
                            <div class="recipient-avatar">
                                <img src="/images/profile_pic.webp" alt="Profile Picture"
                                     class="rounded-circle border border-2 border-primary">
                            </div>
                            <div class="recipient-info ms-3">
                                <h6 class="mb-1">@Model.EmployeeName</h6>
                                <p class="text-muted small mb-0">
                                    <i class="fas fa-envelope me-2"></i>@Model.EmployeeEmail
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Email Form -->
                    <form asp-action="SendEmailToEmployee" method="post">
                        <input type="hidden" id="EmployeeName" name="EmployeeName" value="@Model.EmployeeName" />
                        <input type="hidden" id="EmployeeEmail" name="EmployeeEmail" value="@Model.EmployeeEmail" />

                        <div class="mb-3">
                            <label class="form-label text-muted">
                                <i class="fas fa-heading me-2"></i>Subject
                            </label>
                            <input type="text" id="Subject" name="Subject"
                                   class="form-control form-control-lg border-0 bg-light"
                                   value="@Model.Subject" required
                                   placeholder="Enter email subject">
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-muted">
                                <i class="fas fa-file-alt me-2"></i>Message
                            </label>
                            <textarea id="Body" name="Body"
                                      class="form-control border-0 bg-light"
                                      rows="6" required
                                      placeholder="Write your message here...">@Model.Body</textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-muted">
                                <i class="fas fa-signature me-2"></i>Signature
                            </label>
                            <textarea id="Signature" name="Signature"
                                      class="form-control border-0 bg-light"
                                      rows="2"
                                      placeholder="Enter your signature">@Model.Signature</textarea>
                        </div>

                        <!-- Action Buttons -->
                        <div class="text-end mt-3">
                            <button type="button" class="btn btn-light me-2">
                                <i class="fas fa-times me-2"></i>Cancel
                            </button>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-paper-plane me-2"></i>Send Email
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer bg-light text-muted py-2">
                    <small><i class="fas fa-clock me-1"></i>Last updated: @DateTime.Now.ToString("dd/MM/yyyy")</small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(87deg, #5e72e4 0, #825ee4 100%);
    }

    .card {
        transition: all 0.3s ease;
    }

    .recipient-card {
        background: #f8f9fa;
        border-radius: 0.75rem;
        padding: 0.75rem;
        transition: all 0.3s ease;
    }

        .recipient-card:hover {
            background: #fff;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

    .recipient-avatar img {
        width: 48px;
        height: 48px;
        object-fit: cover;
    }

    .form-control {
        transition: all 0.2s ease;
    }

        .form-control:focus {
            background-color: #fff !important;
            box-shadow: 0 0 0 0.2rem rgba(94, 114, 228, 0.15);
            border-color: #5e72e4;
        }

        .form-control:hover {
            background-color: #f1f3f9 !important;
        }

    .btn-primary {
        background: linear-gradient(87deg, #5e72e4 0, #825ee4 100%);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 7px 14px rgba(94, 114, 228, 0.1), 0 3px 6px rgba(0, 0, 0, 0.08);
        }

    .alert {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    /* Custom Scrollbar */
    textarea::-webkit-scrollbar {
        width: 8px;
    }

    textarea::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 4px;
    }

    textarea::-webkit-scrollbar-thumb {
        background: #5e72e4;
        border-radius: 4px;
    }

        textarea::-webkit-scrollbar-thumb:hover {
            background: #825ee4;
        }
</style>
