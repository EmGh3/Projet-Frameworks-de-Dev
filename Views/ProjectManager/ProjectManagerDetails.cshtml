@model ERP_Project.Models.ProjectManager

@{
    ViewData["Title"] = "Project Manager Details";
    Layout = "../Shared/_adminLayout.cshtml";
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white">
                    <h6 class="card-title mb-0 text-white" style="font-size: 1.5rem;">Welcome, @Model.FirstName @Model.LastName</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-4">
                        <div class="nav-profile-image">
                            <img src="/images/profile_pic.webp" alt="image" style="height: 100px; width: 100px; border-radius: 50%; object-fit: cover;">
                        </div>
                        <div style="font-size: 1.2rem;">
                            <h4 class="mb-0 text-primary">@Model.FirstName @Model.LastName</h4>
                            <p class="text-muted">@Model.Email</p>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-12 col-md-6" style="font-size: 1.1rem;">
                            <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                            <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("dd/MM/yyyy")</p>
                        </div>
                        <div class="col-12 col-md-6" style="font-size: 1.1rem;">
                            <p><strong>Gender:</strong> @Model.Gender</p>
                            <p><strong>Address:</strong> @Model.Address</p>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center gap-4 mt-4 mb-4">
                        <a href="@Url.Action("UpdateProfile", "ProjectManager")" class="btn btn-gradient-primary text-white text-decoration-none" style="font-size: 1.2rem; padding: 12px 20px;">Update Profile</a>
                        <a href="@Url.Action("ResetPassword", "Account")" class="btn btn-gradient-primary text-white text-decoration-none" style="font-size: 1.2rem; padding: 12px 20px;">Reset Password</a>
                    </div>

                    <div class="card-footer text-muted">
                        <p class="mb-2" style="font-size: 1.1rem;">Profile last updated: <em>@DateTime.Now.ToString("dd/MM/yyyy")</em></p>
                    </div>

            </div>
        </div>
    </div>
</div>
